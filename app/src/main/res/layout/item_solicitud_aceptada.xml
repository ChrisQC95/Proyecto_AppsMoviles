<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título de la Solicitud (Basado en la Propuesta) -->
        <TextView
            android:id="@+id/tvTituloSolicitudItemCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"
            tools:text="Solicitud Aceptada para Reparación de Tuberías"/>

        <!-- Mensaje de la Solicitud -->

        <!-- Información del Trabajador -->
        <TextView
            android:id="@+id/tvInfoTrabajadorCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"
            tools:text="Trabajador: Pedro García"/>

        <TextView
            android:id="@+id/tvContactoTrabajadorCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            tools:text="Contacto: 987654321 - pedro.garcia@example.com"/>

        <!-- Información de la Propuesta -->
        <TextView
            android:id="@+id/tvDetallePropuestaCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"
            tools:text="Propuesta: Fontanería - Reparación General (S/ 150.00)"/>

        <!-- Contenedor para el icono de WhatsApp - Alineado a la derecha -->
        <!-- Este LinearLayout se ocultará cuando la solicitud esté 'FINALIZADA' -->
        <LinearLayout
            android:id="@+id/layoutWhatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contactar por WhatsApp:"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/ivWhatsappClienteContacto"
                android:layout_width="48dp"  android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:srcCompat="@drawable/whatsapp"
                android:contentDescription="Iniciar chat de WhatsApp con el trabajador"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

        <!-- Sección de Calificación - Se mostrará cuando la solicitud esté 'FINALIZADA' -->
        <LinearLayout
            android:id="@+id/layoutCalificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Califica el servicio:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <RatingBar
                android:id="@+id/ratingBarServicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:numStars="5"
                android:progressTint="#FFCC00"
                android:rating="0"
                android:stepSize="1.0" />

            <EditText
                android:id="@+id/etComentarioCalificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deja un comentario (opcional)"
                android:inputType="textMultiLine"
                android:lines="3"
                android:gravity="top|start"
                android:padding="8dp"
                android:background="@android:drawable/editbox_background"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnGuardarCalificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar Calificación"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
