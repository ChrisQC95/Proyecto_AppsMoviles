<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título de la Solicitud (Basado en la Propuesta) -->
        <TextView
            android:id="@+id/tvTituloSolicitudItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"
            tools:text="Solicitud para Reparación de Tuberías"/>

        <!-- Mensaje del Cliente -->
        <TextView
            android:id="@+id/tvMensajeClienteItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            tools:text="Mensaje del cliente: Necesito fontanero urgente para fuga de agua en mi baño. ¿Podrías ayudarme hoy mismo?"/>

        <!-- Información del Cliente -->
        <TextView
            android:id="@+id/tvInfoClienteItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"
            tools:text="Cliente: Juan Pérez"/>

        <TextView
            android:id="@+id/tvContactoClienteItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            tools:text="Contacto: 987654321 - juan.perez@example.com"/>

        <!-- Información de la Propuesta (detalles que el cliente está solicitando) -->
        <TextView
            android:id="@+id/tvDetallePropuestaItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            tools:text="Propuesta: Fontanería - Reparación General (S/ 150.00)"/>

        <!-- Botón Aceptar Solicitud -->
        <Button
            android:id="@+id/btnAceptarSolicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceptar Solicitud"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_gravity="end"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textSize="16sp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
