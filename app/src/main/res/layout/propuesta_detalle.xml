<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".cliente.DetallePropuestaActivity"> <TextView
        android:id="@+id/tvTituloPropuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"
        tools:text="Instalación de Lavadero" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/btn_star_big_on"
                android:contentDescription="Estrella de calificación"
                app:tint="#FFD700" /> <TextView
            android:id="@+id/tvCalificacionPropuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="4dp"
            tools:text="4.5" /> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="/5" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="Descripción"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDescripcionPropuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"
            tools:text="Ofrezco servicio de instalación de lavaderos, griferías, y detección de fugas. Con experiencia y garantía." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_dialog_map"
                android:contentDescription="Icono de ubicación"
                app:tint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvUbicacionPropuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                tools:text="Comas" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_agenda"
                android:contentDescription="Icono de oficio"
                app:tint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvOficioPropuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp"
                tools:text="Fontanería" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPrecioPropuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginBottom="24dp"
            tools:text="S/. 60.00" />

        <Button
            android:id="@+id/btnHacerSolicitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hacer solicitud de trabajo"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:paddingVertical="12dp"
            android:textSize="18sp"/>

    </LinearLayout>
</ScrollView>